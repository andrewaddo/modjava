apiVersion: secrets-store.csi.x-k8s.io/v1
kind: SecretProviderClass
metadata:
  name: gcp-secrets
spec:
  provider: gcp
  parameters:
    secrets: |
      - resourceName: "projects/<YOUR-GCP-PROJECT-ID>/secrets/cloud-sql-username/versions/latest"
        path: "db-username"
      - resourceName: "projects/<YOUR-GCP-PROJECT-ID>/secrets/cloud-sql-password/versions/latest"
        path: "db-password"
